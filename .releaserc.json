{
    "$schema": "https://www.schemastore.org/semantic-release.json",
    "branches": [
        "main",
        {
            "name": "next",
            "prerelease": true
        }
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "release": "minor",
                        "type": "feat"
                    },
                    {
                        "release": "patch",
                        "type": "fix"
                    },
                    {
                        "release": "patch",
                        "type": "perf"
                    },
                    {
                        "release": "patch",
                        "type": "refactor"
                    },
                    {
                        "release": "patch",
                        "type": "revert"
                    },
                    {
                        "release": false,
                        "type": "docs"
                    },
                    {
                        "release": false,
                        "type": "test"
                    },
                    {
                        "release": false,
                        "type": "ci"
                    },
                    {
                        "release": false,
                        "type": "chore"
                    },
                    {
                        "release": false,
                        "type": "build"
                    },
                    {
                        "release": false,
                        "type": "style"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits"
            }
        ],
        [
            "@semantic-release/npm",
            {
                "tarballDir": "release"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "label": "npm package",
                        "path": "release/*.tgz"
                    }
                ]
            }
        ]
    ]
}
